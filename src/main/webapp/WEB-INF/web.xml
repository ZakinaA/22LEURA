        <servlet-name>ServletFestival</servlet-name>
        <url-pattern>/ServletFestival/consulterFestival</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletAccueil</servlet-name>
        <url-pattern>/ServletAccueil/index</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
            <!-- pages servlet concert -->
            
        <servlet-name>ServletConcert</servlet-name>
        <url-pattern>/ServletConcert/listerConcert</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletConcert</servlet-name>
        <url-pattern>/ServletConcert/consulterConcert</url-pattern>
    </servlet-mapping>

    <session-config>
        <session-timeout>
